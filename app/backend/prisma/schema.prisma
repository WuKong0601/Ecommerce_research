// Prisma schema for CoFARS E-commerce

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with segmentation
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  role      UserRole @default(USER)
  
  // User segmentation for CoFARS
  segment   UserSegment @default(COLD_START)
  interactionCount Int @default(0)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  orders    Order[]
  cart      CartItem[]
  reviews   Review[]
  interactions UserInteraction[]
  preferences UserPreference?
  
  @@index([email])
  @@index([segment])
}

enum UserRole {
  USER
  ADMIN
}

enum UserSegment {
  COLD_START    // 1 interaction
  REGULAR       // 2-4 interactions
  POWER         // >=5 interactions
}

// Product catalog
model Product {
  id          String   @id @default(uuid())
  name        String
  description String   @db.Text
  price       Decimal  @db.Decimal(10, 2)
  category    String
  group       String   // Main category for JS divergence
  
  // Product attributes for recommendations
  priceBucket Int      // 1-5 (Low to High)
  ratingLevel Int      // 1-3 (Low/Medium/High)
  
  // Inventory
  stock       Int      @default(0)
  imageUrl    String?
  images      String[] // Array of image URLs
  
  // Metadata
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  orderItems  OrderItem[]
  cartItems   CartItem[]
  reviews     Review[]
  interactions UserInteraction[]
  
  @@index([category])
  @@index([group])
  @@index([priceBucket])
  @@index([isActive])
}

// Shopping cart
model CartItem {
  id        String   @id @default(uuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([userId, productId])
  @@index([userId])
}

// Orders
model Order {
  id          String      @id @default(uuid())
  userId      String
  
  // Order details
  status      OrderStatus @default(PENDING)
  total       Decimal     @db.Decimal(10, 2)
  
  // Shipping
  shippingAddress String  @db.Text
  shippingPhone   String
  
  // Context at order time (for recommendations)
  contextId   Int?        // Context when order was placed
  timeSlot    String?     // morning, afternoon, evening, late_night, unknown
  isWeekend   Boolean?
  
  // Timestamps
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relations
  user        User        @relation(fields: [userId], references: [id])
  items       OrderItem[]
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  @@index([orderId])
}

// Product reviews
model Review {
  id        String   @id @default(uuid())
  userId    String
  productId String
  rating    Int      // 1-5
  comment   String?  @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([userId, productId])
  @@index([productId])
  @@index([rating])
}

// User interactions for recommendation model
model UserInteraction {
  id        String   @id @default(uuid())
  userId    String
  productId String
  
  // Interaction type
  type      InteractionType
  
  // Context information
  contextId Int?
  timeSlot  String?
  isWeekend Boolean?
  
  // Timestamps
  timestamp DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  @@index([userId])
  @@index([productId])
  @@index([timestamp])
  @@index([contextId])
}

enum InteractionType {
  VIEW
  CART_ADD
  PURCHASE
  REVIEW
}

// User preferences
model UserPreference {
  id              String   @id @default(uuid())
  userId          String   @unique
  
  // Preferred categories
  favoriteCategories String[]
  
  // Price range preference
  minPrice        Decimal? @db.Decimal(10, 2)
  maxPrice        Decimal? @db.Decimal(10, 2)
  
  // Notification settings
  emailNotifications Boolean @default(true)
  
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Context prototypes (cached from ML model)
model ContextPrototype {
  id          Int      @id // 0-9 for 10 contexts
  name        String   // e.g., "morning_weekday"
  timeSlot    String   // morning, afternoon, evening, late_night, unknown
  isWeekend   Boolean
  
  // Cached embeddings (JSON)
  embedding   String?  @db.Text
  
  // Statistics
  interactionCount Int @default(0)
  
  updatedAt   DateTime @updatedAt
  
  @@unique([timeSlot, isWeekend])
}

// Recommendation cache
model RecommendationCache {
  id          String   @id @default(uuid())
  userId      String
  contextId   Int
  
  // Cached recommendations (product IDs)
  productIds  String[] // Array of product IDs
  scores      Float[]  // Corresponding scores
  
  // Cache metadata
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  
  @@unique([userId, contextId])
  @@index([userId])
  @@index([expiresAt])
}
